<UserControl
    x:Class="MVVMCalculator.View.userControls.ClearingFunctions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:Icons="clr-namespace:MVVMCalculator.View.Resources.Icons"
    xmlns:local="clr-namespace:MVVMCalculator.View.userControls"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Style="{DynamicResource OperatorButtonStyle}"
            Grid.Column="0"
            Content="CE"
            Command="{Binding ClrCommand}"
            CommandParameter="CE" />
        <Button
            Style="{DynamicResource OperatorButtonStyle}"
            Grid.Column="1"
            Content="C"
            Command="{Binding ClrCommand}"
            CommandParameter="C" />
        <Button
            Style="{DynamicResource OperatorButtonStyle}"
            Grid.Column="2"
            Command="{Binding ClrCommand}"
            CommandParameter="Back">
            <Button.Content>
                <Icons:BackIcon/>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
